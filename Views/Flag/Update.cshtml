@model IdealDiscuss.Models.Flag.UpdateFlagViewModel
@{
    ViewData["Title"] = "Update Flag";
}

<div class="body">

    @if (Model is not null)
    {
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Update">
                    <div class="col-md-12 mb-3">
                        <label asp-for="FlagName" class="control-label"></label>
                        <input asp-for="FlagName" type="text" class="form-control" value="@Model.FlagName" />
                        <span asp-validation-for="FlagName" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" type="text" class="form-control" value="@Model.Description" rows="5" cols="10"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>


