@model IdealDiscuss.Models.CommentReport.CommentReportViewModel

@{
    ViewData["Title"] = "Comment Report Details";
}

@await Html.PartialAsync("_Alert", Model)

@if (Model is not null)
{
    <div class="body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-text-width"></i>
                            @ViewData["Title"]
                        </h3>
                    </div>

                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-md-4">CommentReporter:</dt>
                            <dd class="col-md-8">@Model.CommentReporter</dd>
                            <dt class="col-md-4">CommentText:</dt>
                            <dd class="col-md-8">@Model.CommentText</dd>
                            <dt class="col-md-4">Additional Comment:</dt>
                            <dd class="col-md-8">@Model.AdditionalComment</dd>
                            <dt class="col-md-4">FlagNames:</dt>
                            <dd class="col-md-8">
                                @foreach(var flag in Model.FlagNames)
                                {
                                    <i class="badge bg-dark">@flag</i>
                                }
                            </dd>
                        </dl>

                         @if (Model.UserId == "1")
                         {
                            <form asp-action="DeleteCommentReport" asp-route-id="@Model.Id" style="display:inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>

                            <div class="btn-group">
                                <a class="btn btn-primary" asp-controller="Comment" asp-action="GetCommentDetail" asp-route-id="@Model.CommentId">Go back</a>
                            </div>
                         }
                         else
                         {
                            <div class="btn-group">
                                <a class="btn btn-primary" asp-controller="Comment" asp-action="GetCommentDetail" asp-route-id="@Model.CommentId">Go back</a>
                            </div>
                         }

                    </div>

                </div>
            </div>
        </div>
    </div>
}
