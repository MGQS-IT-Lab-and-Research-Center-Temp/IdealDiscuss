@model List<IdealDiscuss.Models.Comment.CommentViewModel>

@{
    ViewData["Title"] = "Comment List";
    int count = 1;
}

@await Html.PartialAsync("_ListAlert", Model)

@if (Model is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">S/N</th>
                <th scope="col">Comment Text</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td scope="row">@item.CommentText</td>
                    <td scope="row">
                        <div class="btn-group">
                            <a asp-controller="Comment" asp-action="GetCommentDetail" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                            <a asp-controller="CommentReport" asp-action="CreateCommentReport" asp-route-id="@item.Id" class="btn btn-warning">Report Comment</a>
                        </div>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}

