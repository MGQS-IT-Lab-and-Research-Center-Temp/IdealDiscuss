@{
    ViewData["Title"] = "Create Comment";
    var status = ViewBag.Status == false ? "alert-danger" : "alert-success";
    var questionId = ViewContext.RouteData.Values["id"];
}

@if (ViewBag.Message != null)
{
    <div class="alert @status alert-dismissible" role="alert">
        @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-center">

    <form asp-action="create">
        <div class="col-md-12 mb-2">
            <input type= "hidden" class="form-control" placeholder="Enter comment" name="QuestionId" value="@questionId"/>
        </div>
        <div class="col-md-12 mb-2">
            <label for="CommentText" class="form-label">Comment:</label>
            <textarea class="form-control" placeholder="Enter comment" name="CommentText"></textarea>
        </div>

        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Create Comment</button>
        </div>
    </form>
</div>