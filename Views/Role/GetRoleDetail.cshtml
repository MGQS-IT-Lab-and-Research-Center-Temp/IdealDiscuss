@model IdealDiscuss.Models.Role.RoleViewModel

@{
    ViewData["Title"] = "Role Detail";
}

<div class="body">

    @await Html.PartialAsync("_Alert", Model)

    @if (Model is not null)
    {
        <dl class="row">
            <dt class="col-sm-4">
                Role Name:
            </dt>

            <dd class="col-sm-8">
                @Model.RoleName
            </dd>

            <dt class="col-sm-4">
                Description:
            </dt>

            <dd class="col-sm-8">
                @Model.Description
            </dd>
        </dl>
        <br />

        @if (Model.RoleName == "Admin" || Model.RoleName == "AppUser")
        {
            <a asp-controller="Role" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>

            <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Back to list</a>
        }
        else
        {
            <a asp-controller="Role" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">
                Update
            </a>

            <form asp-action="DeleteRole" asp-route-id="@Model.Id" class="del-btn">
                <button type="submit" class="btn btn-danger">
                    Delete
                </button>
            </form>

            <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">
                Back to list
            </a>
        }
    }
</div>