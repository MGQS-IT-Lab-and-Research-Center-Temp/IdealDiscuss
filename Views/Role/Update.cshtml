@model IdealDiscuss.Dtos.RoleDto.ViewRoleDto
@{
	ViewData["Title"] = "Update Role";
}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-6">
		   <form asp-action="Update">
              	<div class="form-group">
					<label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" type="text" class="form-control" value="@Model.RoleName" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
				</div>

				<div class="form-group"> 
					<label asp-for="Description" class="control-label"></label>
					<input asp-for="Description" type="text" class="form-control" value="@Model.Description" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
             <div class="col-md-12">
                 <button type="submit" class="btn btn-primary">Update</button>
             </div>
            </form>
		</div>
	</div>
</div>



