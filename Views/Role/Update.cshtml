@model IdealDiscuss.Models.Role.UpdateRoleViewModel
@{
    ViewData["Title"] = "Update Role";
}

<div class="body">
    
    @await Html.PartialAsync("_Alert", Model)

    @if (Model is not null)
    {
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Update">
                    <input type="hidden" asp-for="Id" />
                    <div class="col-md-12 mb-3" type>
                        <label asp-for="RoleName" class="control-label"></label>
                        <input asp-for="RoleName" type="text" class="form-control" value="@Model.RoleName" readonly />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" type="text" class="form-control" value="@Model.Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>