@model List<IdealDiscuss.Dtos.RoleDto.ViewRoleDto>

@{
    ViewData["Title"] = "Role List";
    int count = 1;
    var counts = Model.Count;
}

<h3>Total Roles: (@counts)</h3>

<div>
    <a asp-controller="Role" asp-action="Create" class="btn btn-outline-primary">Add New Role</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Role Name</th>
            <th scope="col">Role Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@item.RoleName</td>
                <td>@item.Description</td>
                <td>
                    <div class="btn-group">
                        <a asp-controller="Role" asp-action="GetRoleDetail" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                        <a asp-controller="Role" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                        <form asp-action="DeleteRole" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>