@model List<IdealDiscuss.Dtos.QuestionDto.ViewQuestionDto>

@{
    ViewData["Title"] = "Home Page";
    int count = 1;
    var status = !(bool)ViewData["Status"];
}

<div>
    @if (Model is null || Model.Count == 0)
    {
        <p>@ViewData["Message"]</p>
        return;
    }

    <table class="table">
        <thead>
            <tr>
                <th scope="col">S/N</th>
                <th scope="col">Question</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.QuestionText</td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Comment" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Add Comment</a>
                        </div>
                        <div class="btn-group">
                            <a asp-controller="Comment" asp-action="GetCommentDetail" asp-route-id="@item.Id" class="btn btn-primary">ViewComments</a>
                        </div>
                        <div>
                            <a asp-controller="Comment" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                        </div>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>
