@model List<IdealDiscuss.Dtos.QuestionDto.ViewQuestionDto>

@{
    ViewData["Title"] = "Home Page";   
    int count = 1;
   var status = ViewBag.Status == false ? false : true;
}

    @if (status == false)
    {
        <p>@ViewBag.Message</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">S/N</th>
                    <th scope="col">Question</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.QuestionText</td>
                        <td>
                            <div class="btn-group">
                                <a asp-controller="Comment" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">ViewComments</a>
                            </div>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    }


</div>
